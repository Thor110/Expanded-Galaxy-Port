<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileLauncher.MainPage">
    <ContentPage.Resources>
        <Style x:Key="DisabledButtonStyle" TargetType="Button">
            <Style.Triggers>
                <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                    <Setter Property="TextColor" Value="Black" />
                    <Setter Property="BackgroundColor" Value="Gray" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="BackgrounImage"
                Source="k1swlauncher1.bmp"
                HeightRequest="185"
                Aspect="AspectFit" />
            <Button
                x:Name="GameBtn"
                Text="Game" 
                SemanticProperties.Hint="Launch The Game"
                Clicked="GameClicked"
                HorizontalOptions="Fill" />
            <VerticalStackLayout HorizontalOptions="Fill">
                <Grid HorizontalOptions="Fill">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Label
                        x:Name="HealthLabel"
                        Text="Health Regeneration: On"
                        VerticalOptions="Center" />
                    <Switch
                        x:Name="HealthSwitch"
                        IsToggled="True"
                        VerticalOptions="Center"
                        Grid.Column="1" />
                </Grid>
            </VerticalStackLayout>
            <Button
                x:Name="WebsiteBtn"
                Text="Website" 
                SemanticProperties.Hint="Launch The Website"
                Clicked="WebsiteClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="DiscordBtn"
                Text="Discord" 
                SemanticProperties.Hint="Launch The Discord Server"
                Clicked="DiscordClicked"
                HorizontalOptions="Fill" />
            <Button
                x:Name="ExitBtn"
                Text="Exit" 
                SemanticProperties.Hint="Exit The Launcher"
                Clicked="ExitClicked"
                HorizontalOptions="Fill" />
            <Grid HorizontalOptions="Fill">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button
                    x:Name="K1Button"
                    Text="KotOR1"
                    Clicked="GameButton_Clicked"
                    Grid.Column="0"
                    Style="{StaticResource DisabledButtonStyle}" />
                <Button
                    x:Name="K2Button"
                    Text="KotOR2"
                    Clicked="GameButton_Clicked"
                    Grid.Column="1"
                    Style="{StaticResource DisabledButtonStyle}" />
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
